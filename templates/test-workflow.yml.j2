name: "Test Action"
on:
  workflow_dispatch:

permissions:
  contents: read

jobs:
  test:
    strategy:
      matrix:
        include:
          - os: {{ github.runner }}
          # - os: macos-latest
          # - os: windows-latest

    runs-on: {%raw %}${{ matrix.os }}
{%endraw %}
    steps:
      - name: Checkout code
        uses: actions/checkout@v5

      - name: Run tests
        id: test-action
        uses: ./.
        with:
          github-token: {%raw %}${{ secrets.GITHUB_TOKEN }}
{%endraw %}
          artifact-owner: "{{ repository_owner }}"
          artifact-repository: "{{ repository_name  }}"
          name: "Jhon"
          surname: "Doe"

      - name: Show output
        run: |
          echo "Action output: {%raw %}${{ steps.test-action.outputs.greeting-message }}"
{%endraw %}
